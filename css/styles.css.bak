/* Reset default margin and padding for all elements */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
}

h1 {
    font-size: 24px;
    margin-bottom: 20px;
}

.container {
    display: flex;
    flex-wrap: wrap;
}

section {
    flex: 1;
    padding: 20px;
    border: 1px solid black;
    margin: 10px;
    background-color: #f1f1f1;
}

.section-title {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #e91e63;
    color: #fff;
    padding: 5px 10px;
    font-size: 125%;
    border: 1px solid black;
}

/* Desktop view */
@media (min-width: 992px) {
    section {
        width: 33.33%;
    }
}

/* Tablet view */
@media (min-width: 768px) and (max-width: 991px) {
    section {
        width: 50%;
    }
    .container {
        flex-direction: column;
    }
    .container > section:nth-child(3) {
        width: 100%;
    }
}

/* Mobile view */
@media (max-width: 767px) {
    section {
        width: 100%;
    }
    .container > section {
        margin-bottom: 20px;
    }
}
